    <defName>IM_BloodChurnNoise</defName>
    <graphicData>
      <texPath>Things/Mote/WaterChurnNoise</texPath>
      <renderInstanced>true</renderInstanced>
      <shaderParameters>
        <_Color2>(0.8, 0, 0, 0.5)</_Color2>
      </shaderParameters>
