<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Bombardier Weapon Changes -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="IM_Mech_Bombardier"]/comps/li[@Class="CompProperties_TurretGun"]/turretDef</xpath>
		<value>
			<turretDef>IMCE_TripleNeedler</turretDef>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="IM_Mech_Bombardier"]/weaponTags</xpath>
		<value>
			<weaponTags>
				<li>IM_GunCECH</li>
			</weaponTags>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="IM_Gun_ChargeHowitzer" or defName="IM_Gun_TripleNeedler"]</xpath>
	</Operation>

	<!-- Melee Attacks -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[
			defName="IM_Gun_ChargeRepeater" or
			defName="IM_Gun_MiniBlaster" or
			defName="IM_Gun_StingerRifle"
			]/tools </xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>11.7</power>
					<cooldownTime>2.6</cooldownTime>
					<armorPenetrationBlunt>2.4</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="IM_Gun_ChargeCleaver"]/tools </xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>11.7</power>
					<cooldownTime>2.6</cooldownTime>
					<armorPenetrationBlunt>2.4</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>edge</label>
					<capacities>
						<li>Cut</li>
					</capacities>
					<power>25</power>
					<cooldownTime>1.72</cooldownTime>
					<chanceFactor>1</chanceFactor>
					<armorPenetrationBlunt>2.59</armorPenetrationBlunt>
					<armorPenetrationSharp>18</armorPenetrationSharp>
					<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="IM_Gun_StingerGun"]/tools </xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>11.7</power>
					<cooldownTime>2.6</cooldownTime>
					<armorPenetrationBlunt>2.4</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>edge</label>
					<capacities>
						<li>IM_PoisonBlade</li>
					</capacities>
					<power>10</power>
					<cooldownTime>1.72</cooldownTime>
					<chanceFactor>1</chanceFactor>
					<armorPenetrationBlunt>2.59</armorPenetrationBlunt>
					<armorPenetrationSharp>8</armorPenetrationSharp>
					<linkedBodyPartsGroup>Edge</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<!-- ========== Mini-Blaster ========== -->

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>IM_Gun_MiniBlaster</defName>
		<statBases>
			<Mass>2.80</Mass>
			<Bulk>5.00</Bulk>
			<SwayFactor>0.75</SwayFactor>
			<ShotSpread>0.16</ShotSpread>
			<SightsEfficiency>1</SightsEfficiency>
			<RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
		</statBases>
		<Properties>
			<recoilAmount>1.280</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>Bullet_5x16mmCharged</defaultProjectile>
			<warmupTime>0.6</warmupTime>
			<range>26</range>
			<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
			<burstShotCount>6</burstShotCount>
			<soundCast>IM_MiniBlasterShot</soundCast>
			<soundCastTail>GunTail_Light</soundCastTail>
			<muzzleFlashScale>9</muzzleFlashScale>
		</Properties>
		<AmmoUser>
			<magazineSize>18</magazineSize>
			<reloadTime>4</reloadTime>
			<ammoSet>AmmoSet_5x16mmCharged</ammoSet>
		</AmmoUser>
		<FireModes>
			<aiAimMode>Snapshot</aiAimMode>
			<aiUseBurstMode>True</aiUseBurstMode>
			<aimedBurstShotCount>3</aimedBurstShotCount>
		</FireModes>
		<weaponTags>
			<li>CE_AI_Rifle</li>
			<li>NoSwitch</li>
		</weaponTags>
	</Operation>

