	<!-- ========== Charge Howitzer Turret ========== -->

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>IM_Gun_ChargeHowitzer</defName>
		<statBases>
			<SightsEfficiency>1</SightsEfficiency>
			<ShotSpread>0.2</ShotSpread><!-- Manually adjusted from 0.08 due to accuracy concerns. -->
			<SwayFactor>0.56</SwayFactor>
			<Bulk>6.00</Bulk>
		</statBases>
		<Properties>
			<recoilAmount>1.73</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootMortarCE</verbClass>
			<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
			<requireLineOfSight>false</requireLineOfSight>
			<defaultProjectile>IM_Bullet_ChargeShell_CE</defaultProjectile>
			<warmupTime>3.6</warmupTime>
			<range>86</range>
			<minRange>14</minRange>
			<soundCast>IM_ChargeHoitzerShot</soundCast>
			<soundCastTail>GunTail_Heavy</soundCastTail>
			<muzzleFlashScale>39</muzzleFlashScale>
			<circularError>1</circularError>
			<indirectFirePenalty>0.25</indirectFirePenalty>
			<defaultCooldownTime>8</defaultCooldownTime>
			<linkedBodyPartsGroup>BulbTurret</linkedBodyPartsGroup>
			<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			<ticksBetweenBurstShots>480</ticksBetweenBurstShots>
		</Properties>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="IM_Gun_ChargeHowitzer"]</xpath>
		<value>
			<comps>
				<li Class="CombatExtended.CompProperties_Charges">
					<chargeSpeeds>
						<li>20</li>
						<li>30</li>
						<li>40</li>
						<li>50</li>
						<li>60</li>
					</chargeSpeeds>
				</li>
			</comps>
		</value>
	</Operation>

</Patch>
